<div class="container">

  <h1>Random Beer</h1>

  <div class="row">
        <div class='beer-container'>
            <div>
            <img class='beer-imgs' src="{{image_url}}" alt="image">
            </div>
            <div>
                <h1>{{name}}</h1>
                <h6>{{tagline}}</h6>
                <p>{{description}}</p>
                <h3>Food Pairing</h3>
                <ul>
                    {{#each food_pairing}}
                    <li>
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
            </div>

            <div>
                <span>Brewers Tips:</span>{{brewers_tips}}
            </div>

        </div>


  </div>

</div>